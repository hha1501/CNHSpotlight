<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    auto:cardCornerRadius="3dp"
    android:id="@+id/postcardviewitem_cardview_root"
    auto:cardBackgroundColor="@color/cardview_post_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageview_thumbnail_height"
            android:id="@+id/postcardviewitem_imageview_thumbnailimage"
            android:src="@android:drawable/ic_menu_gallery"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <TextView
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/postcardviewitem_imageview_thumbnailimage"
            android:id="@+id/postcardviewitem_text_title"
            android:textColor="@color/cardview_post_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp" />
        <TextView
            android:text="Author"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postcardviewitem_text_title"
            android:id="@+id/postcardviewitem_text_author"
            android:textColor="@color/cardview_post_author"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>